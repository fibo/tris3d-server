{
  "name": "tris3d-server",
  "description": "Play tic tac toe in 3d",
  "version": "0.5.0",
  "private": true,
  "homepage": "http://play.tris3d.net",
  "author": {
    "name": "Gianluca Casati",
    "url": "http://g14n.info"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run lint && npm run test && npm run webpack",
    "postbuild": "npm run git_add-f; git commit -m 'build'; git push origin master",
    "check-deps": "npm outdated",
    "git_add-f": "git add -f public/bundle.js",
    "lint": "standard",
    "preversion": "npm run build",
    "postversion": "git push origin v${npm_package_version}; git push origin master",
    "start": "DEBUG=${npm_package_name} forever start --uid ${npm_package_name} --append server.js",
    "stop": "forever stop --uid ${npm_package_name} server.js",
    "test": "mocha",
    "watch_webpack": "webpack -w",
    "webpack": "NODE_ENV=production webpack -p"
  },
  "pre-commit": [
    "check-deps",
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/fibo/tris3d-canvas.git"
  },
  "keywords": [
    "tris3d",
    "3d",
    "game"
  ],
  "bugs": {
    "url": "https://github.com/fibo/tris3d-server/issues"
  },
  "devDependencies": {
    "babel-core": "^6.20.0",
    "babel-loader": "6.x",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "before-unload": "^2.0.0",
    "forever": "0.x",
    "mocha": "3.x",
    "pre-commit": "1.x",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^4.4.5",
    "read-file-utf8": "^1.1.1",
    "redux": "^3.6.0",
    "semantic-ui-react": "^0.62.1",
    "should": "^11.1.2",
    "standard": "8.x",
    "supertest": "2.x",
    "tris3d-canvas": "^0.8.0",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "express": "^4.14.0",
    "not-defined": "^1.1.0",
    "socket.io": "^1.7.2",
    "tris3d": "^0.3.0",
    "tris3d-ai": "^0.6.0"
  },
  "standard": {
    "globals": [
      "describe",
      "io",
      "it",
      "localStorage"
    ]
  }
}
