{
  "name": "tris3d-server",
  "description": "Play tic tac toe in 3d",
  "version": "0.2.0",
  "private": true,
  "homepage": "http://play.tris3d.net",
  "author": {
    "name": "Gianluca Casati",
    "url": "http://g14n.info"
  },
  "license": "MIT",
  "scripts": {
    "check-deps": "npm outdated",
    "lint": "npm run lint_css; npm run lint_js",
    "lint_css": "stylelint styles/*css styles/*/*css",
    "lint_js": "standard",
    "postcss": "postcss --config postcss.json",
    "postversion": "git push origin v${npm_package_version}; git push origin master",
    "start": "DEBUG=${npm_package_name} forever start --uid ${npm_package_name} --append server.js",
    "stop": "forever stop --uid ${npm_package_name} server.js",
    "test": "mocha",
    "watch_postcss": "postcss --watch --config postcss.json",
    "watch_webpack": "webpack -w",
    "webpack": "NODE_ENV=production webpack -p"
  },
  "pre-commit": [
    "check-deps",
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/fibo/tris3d-canvas.git"
  },
  "keywords": [
    "tris3d",
    "3d",
    "game"
  ],
  "bugs": {
    "url": "https://github.com/fibo/tris3d-server/issues"
  },
  "devDependencies": {
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "mocha": "^3.0.0",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "postcss-cli": "^2.5.2",
    "postcss-import": "^8.1.2",
    "precss": "^1.4.0",
    "pre-commit": "^1.1.3",
    "normalize.css": "^4.2.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "rucksack-css": "^0.8.6",
    "read-file-utf8": "^1.1.1",
    "should": "^11.1.0",
    "standard": "^7.1.2",
    "tris3d-canvas": "^0.7.1",
    "autoprefixer": "^6.4.0",
    "supertest": "^2.0.0",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "express": "^4.14.0",
    "forever": "^0.15.2",
    "socket.io": "^1.4.8",
    "tris3d": "^0.3.0",
    "tris3d-ai": "^0.5.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "standard": {
    "globals": [
      "describe",
      "io",
      "it",
      "localStorage"
    ]
  }
}
