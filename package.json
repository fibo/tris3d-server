{
  "name": "tris3d-server",
  "description": "Play tic tac toe in 3d",
  "version": "0.5.0",
  "private": true,
  "homepage": "http://play.tris3d.net",
  "author": {
    "name": "Gianluca Casati",
    "url": "http://g14n.info"
  },
  "license": "MIT",
  "scripts": {
    "browserify": " browserify -t babelify client.js -o public/bundle.js",
    "build": "npm run lint && npm run test && npm run sass && npm run browserify",
    "postbuild": "npm run git_add-f; git commit -m 'build'; git push origin master",
    "check-deps": "npm outdated",
    "git_add-f": "git add -f public/bundle.js public/style.css",
    "lint": "for x in css js; do npm run lint_$x; done",
    "lint_css": "sass-lint -v sass/*",
    "lint_js": "standard",
    "preversion": "npm run build",
    "postversion": "git push origin v${npm_package_version}; git push origin master",
    "sass": "node-sass sass/style.scss --output public",
    "start": "DEBUG=${npm_package_name} forever start --uid ${npm_package_name} --append server.js",
    "stop": "forever stop --uid ${npm_package_name} server.js",
    "test": "mocha",
    "watch": "npm-watch"
  },
  "pre-commit": [
    "check-deps",
    "lint",
    "test"
  ],
  "watch": {
    "browserify": {
      "patterns": [
        "actions",
        "components",
        "containers",
        "middlewares",
        "reducers",
        "store"
      ]
    },
    "sass": "sass"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/fibo/tris3d-server.git"
  },
  "keywords": [
    "tris3d",
    "3d",
    "game"
  ],
  "bugs": {
    "url": "https://github.com/fibo/tris3d-server/issues"
  },
  "devDependencies": {
    "before-unload": "^2.0.0",
    "es6-object-assign": "^1.0.3",
    "mocha": "^3.2.0",
    "node-sass": "^4.1.1",
    "npm-watch": "^0.1.7",
    "pre-commit": "^1.2.2",
    "read-file-utf8": "^1.1.1",
    "sass-lint": "^1.10.2",
    "should": "^11.1.2",
    "standard": "^8.6.0",
    "supertest": "^2.0.1",
    "tris3d-canvas": "^0.9.0",
    "zeroconf-redux": "^0.11.0"
  },
  "dependencies": {
    "express": "^4.14.0",
    "not-defined": "^1.1.0",
    "socket.io": "^1.7.2",
    "tris3d": "^0.3.0",
    "tris3d-ai": "^0.6.0"
  },
  "sasslintConfig": "sass/.sass-lint.yml",
  "standard": {
    "globals": [
      "describe",
      "io",
      "it",
      "localStorage"
    ]
  }
}
