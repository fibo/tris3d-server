{
  "name": "tris3d-server",
  "description": "is a Facebook app to play tic tac toe in 3d",
  "version": "0.0.0",
  "private": true,
  "homepage": "http://play.tris3d.net",
  "author": {
    "name": "Gianluca Casati",
    "url": "http://g14n.info"
  },
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "check-deps": "npm outdated",
    "lint": "standard",
    "postupdate-deps": "npm test && git commit -am ':arrow_up: updated deps' || git checkout -- package.json",
    "postversion": "git push origin v${npm_package_version}; git push origin master",
    "start": "DEBUG=${npm_package_name} forever start --uid ${npm_package_name} --append server.js",
    "stop": "forever stop --uid ${npm_package_name} server.js",
    "test": "mocha",
    "update-deps": "npm update --save --dev",
    "webpack": "webpack -p",
    "webpack-dev-server": "webpack-dev-server --host 0.0.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/fibo/tris3d-canvas.git"
  },
  "keywords": [
    "tris3d",
    "3d",
    "game"
  ],
  "bugs": {
    "url": "https://github.com/fibo/tris3d-server/issues"
  },
  "devDependencies": {
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "mocha": "^3.0.0",
    "standard": "^7.1.2",
    "supertest": "^2.0.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "express": "^4.14.0",
    "forever": "^0.15.2",
    "tris3d-canvas": "^0.4.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ]
  }
}
